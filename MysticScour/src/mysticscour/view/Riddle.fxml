<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mysticscour.view.RiddleController">
    <stylesheets>
        <URL value="@riddle.css" />
    </stylesheets>
   <children>
      <Label fx:id="riddle" layoutX="40.0" layoutY="112.0" text="Riddle: I'm the part of a bird but not in the sky, I can swim in the ocean yet remain dry. What am I?" />
      <Button fx:id="submit" layoutX="349.0" layoutY="219.0" mnemonicParsing="false" onAction="#testAnwser" text="Submit" />
      <Label fx:id="response" layoutX="286.0" layoutY="287.0" />
      <TextField fx:id="tf" layoutX="200.0" layoutY="219.0" promptText="Answer" />
      <Button fx:id="item" layoutX="36.0" layoutY="340.0" mnemonicParsing="false" onAction="#testAnwser" text="Use Item to skip puzzle" />
      <Label fx:id="prelude" layoutX="158.0" layoutY="223.0" text="I am a :" />
      <Button fx:id="nextPuzzle" layoutX="274.0" layoutY="340.0" mnemonicParsing="false" onAction="#loadNextPuzzle" text="Next Puzzle" visible="false" />
      <TextArea fx:id="storyText" editable="false" prefHeight="400.0" prefWidth="600.0" text="&#10;&#10;&#10;&#10;&#10;&#10;&#10;The last latch makes a clicking noise as it slides into place and the door makes a groaning noise as it slowly&#10;slides down.  You step through the threshold before the door starts to slide back up, leaving you trapped and&#10;having to keep going forward for now.  &#10;&#10;After going through several twists and turns in the dark, you comeacross two giant warrior statues made of &#10;bronze, blocking a giant doorway with their shields.  Written in the floor are the words &#10;“Solve the riddle and you will find yourself closer to that which you seek.”&#10;" />
      <Button fx:id="startPuzzle" layoutX="467.0" layoutY="328.0" mnemonicParsing="false" onAction="#showPuzzle" text="Start Puzzle" />
   </children>
</AnchorPane>
